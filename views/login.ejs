<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="resources/css/style.css">
</head>
<body>
    <div class="login-form">
        <h2>Login</h2>
        <center><div class="avatar" style="background-image: url(resources/img/foto.png)"></div></center>
        <p></p>
        <form action="/auth" method="POST">
            <input type="email"  name="email" id="email" placeholder="Correo">
            <input type="password"  name="pass" id="pass" placeholder="ContraseÃ±a" >
            <input type="submit" class="btn-login" value="Entrar">
        </form>
        <a href="register" class="btn-register">Registrarme</a>
    </div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% if (typeof alert != "undefined") { %>
    <script>
        Swal.fire({
            title: '<%= alertTitle %>',
            text: ' <%= alertMessage %>',
            icon: '<%= alertIcon %>',
            showComfirmButton: <%= showComfirmButton %>,
            timer: <%= timer %>
        }).then(()=>{
            window.location='/<%= ruta %>'
        })
    </script>
<% } %>
</body>
</html>